{
  "name": "still-design",
  "version": "1.0.0",
  "description": "一个基于VUE3的组件库",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "concurrently \"pnpm components:dev\" \"pnpm docs:dev\"",
    "build": "npm-run-all components:build docs:build",
    "components:dev": "pnpm run -C packages/components dev",
    "components:build": "pnpm run -C packages/components build",
    "docs:dev": "pnpm run -C docs dev",
    "docs:build": "pnpm run -C docs build",
    "docs:serve": "pnpm run -C docs serve"
  },
  "author": "tetap",
  "license": "MIT",
  "dependencies": {
    "@types/node": "^18.11.7",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.2",
    "concurrently": "^7.5.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.6.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "stylelint": "^14.14.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-scss": "^4.3.0",
    "typescript": "*",
    "vite": "^3.2.0"
  }
}
